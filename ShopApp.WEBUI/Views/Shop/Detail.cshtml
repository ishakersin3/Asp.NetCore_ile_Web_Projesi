@model ProductDetailModel


<div class="row">
    <div class="col-md-3">
        <img src="~/images/@Model.product.ImageUrl" class="img-fluid" alt="">
    </div>
    <div class="col-md-9">
        <h5 class="mb-3">@Model.product.Name</h5> <hr />
        @foreach (var item in Model.categories)
        {
            <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name |</a>
        }       
        <div class="mb-3">
            <h4 class="text-primary mb-3"><i class="fas fa-lira-sign">@Model.product.Price</i></h4>
            <button type="submit" class="btn btn-primary btn-lg">Add To Cart</button>
        </div>        
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Model.product.Description</p>
    </div>
</div>

