@model List<Category>

<a href="/products" class="list-group-item list-group-item-action">Tüm Ürünleri Göster</a>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a asp-controller="Shop" asp-action="list" asp-route-category="@item.Url" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.Url?"active":"")">@item.Name</a>
    }
</div>